<div class="row no-padding">
<div class="col-lg-offset-1 col-lg-10  wightbg padding-bottom3p viewowner">

<p id="notice"><%= notice %></p>
<h1 class="heading widthfull">Pet Details</h1>
<div class="col-lg-12">
<div class="col-lg-6 text-center">Pet Owner :</div>
<div class="col-lg-6 text-center bold"> <%= @pet.customer.name%></div>
</div>
<div class="col-lg-12">
<div class="col-lg-6 text-center"> Pet Name :</div>
 <div class="col-lg-6 text-center bold"><%= @pet.name%></div>
</div>
<div class="col-lg-12">
<div class="col-lg-6 text-center"> Pet Color :</div>
 <div class="col-lg-6 text-center bold"><%= @pet.color%> </div>
</div>
<div class="col-lg-12">
<div class="col-lg-6 text-center"> Pet Age : </div>
<div class="col-lg-6 text-center bold"><%= @pet.age%> </div>
</div>
<div class="col-lg-12">
<div class="col-lg-6 text-center"> Pet DOB : </div>
<div class="col-lg-6 text-center bold"><%= @pet.dob.strftime("%d/%m/%Y")%> </div>
</div>
<div class="col-lg-12">
<div class="col-lg-6 text-center"> Tax  :</div>
 <div class="col-lg-6 text-center bold"><%= @pet.tax%> </div>
</div>
<div class="col-lg-12">
<div class="col-lg-6 text-center"> Tax Paid On : </div>
<div class="col-lg-6 text-center bold"><%= @pet.tax_paid_on.strftime("%d/%m/%Y")%> </div>
</div>
<div class="col-lg-12">
<div class="col-lg-6 text-center"> Sterilized :</div>
 <div class="col-lg-6 text-center bold"><%= @pet.sterilized %> </div>
</div>
<div class="col-lg-12">
<div class="col-lg-6 text-center"> Medical History :</div>
 <div class="col-lg-6 text-center bold"><%= @pet.medical_history%> </div>
</div>
<div class="col-lg-12">
<%= link_to 'Back', pets_path ,:class => "col-lg-1 pull-right btn btn-default" %>
<div class="col-lg-12">
</div>
</div>
